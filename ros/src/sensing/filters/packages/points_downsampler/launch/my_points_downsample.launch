<launch>
  <arg name="sync" default="true" />
  <arg name="node_name" default="random_filter" />
  <arg name="points_topic" default="velodyne_points" /> <!-- input points topic -->
  <arg name="output_log" default="false" />

  <node pkg="points_downsampler" name="$(arg node_name)" type="$(arg node_name)">
    <param name="points_topic" value="$(arg points_topic)" />
    <remap from="/filtered_points" to="/points_raw" if="$(arg sync)" /> <!-- output remap topic -->
    <param name="output_log" value="$(arg output_log)" />
  </node>
</launch>
